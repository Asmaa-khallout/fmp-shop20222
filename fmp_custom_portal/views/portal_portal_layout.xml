<odoo>


    <template name="Portal Layout" t-name="portal.portal_layout">
        <style>
            a.table_of_content_link.list-group-item.list-group-item-action.py-2.border-0.rounded-0:hover {
            background-color: transparent !important;
            }
            address{
            font: normal normal normal 14px/24px Poppins !important;
            letter-spacing: 0px;
            color: #000000 !important;
            margin: 0 !important;
            text-align: left;
            }
            div.o_portal_my_details{
            box-shadow:none !important;
            }
            table thead th thead{
            border: 1px solid #D8DADB !important ;
            }
            th{
            border-top: none !important;
            }
            tr{
            border-top: none !important;
            }
            .table thead th {
            border-bottom: 1px solid #DEE2E6 !important;
            }

        </style>
        <t t-call="portal.frontend_layout">
            <t t-set="is_portal" t-value="True"/>

            <div t-if="not no_breadcrumbs and not my_details and not breadcrumbs_searchbar"
                 class="o_portal container mt-3">
                <div class="row align-items-center bg-white no-gutters border rounded">
                    <div class="col-10">
                        <t t-call="portal.portal_breadcrumbs"/>
                    </div>
                    <div t-if="prev_record or next_record" class="col-2 flex-grow-0 text-center">
                        <t t-call="portal.record_pager"/>
                    </div>
                </div>
            </div>
            <div id="wrap" class="o_portal_wrap">
                <div class="container mb64">
                    <t t-if="my_details">
                        <div class="row justify-content-between mt-4">
                            <div t-attf-class="col-12 col-md col-lg-6">
                                <t t-raw="0"/>
                            </div>
                            <div id="o_my_sidebar" class="pt-3 pt-lg-0 col-12 o_my_sidebar">
                                <div class="o_my_contact" t-if="sales_user">
                                    <t t-call="portal.portal_contact"/>
                                </div>

                                <div class="o_portal_my_details">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-lg-3 s_table_of_content_s commnavbar_wrap s_table_of_content_navbar_sticky s_table_of_content_vertical_navbar d-print-none mb-5 d-lg-block o_not_editable "
                                                 data-name="Navbar">
                                                <div class="s_table_of_content_navbar list-group" style="">

                                                    <div class="border-top pt-2">
                                                        <a href="/my/account"
                                                           class="table_of_content_link list-group-item list-group-item-action py-2 border-0 rounded-0"
                                                           style="color: #000000; height: 40px;font: normal normal bold 14px/19px Roboto;">
                                                            <i class="fa fa-user mb-2"
                                                               style="font-size: 1.2em; margin-right: 17px !important;"></i>
                                                            Mes Informations
                                                            <i style="color: #000000 !important;"
                                                               class="float-right text-muted fa fa-chevron-right"
                                                               title="Fold" aria-label="Fold"/>
                                                        </a>

                                                    </div>

                                                    <div class="border-top pt-2">
                                                        <a href="/my/adress"
                                                           class="table_of_content_link list-group-item list-group-item-action py-2 border-0 rounded-0"
                                                           style="color: #000000; height: 40px;font: normal normal bold 14px/19px Roboto;">
                                                            <i class="fa fa-map-marker mb-2"
                                                               style="font-size: 1.2em; margin-right: 17px !important;"></i>
                                                            Mes adresses
                                                            <i style="color: #000000 !important;"
                                                               class="float-right text-muted fa fa-chevron-right"
                                                               title="Fold" aria-label="Fold"/>
                                                        </a>

                                                    </div>

                                                    <div class="border-top pt-2">
                                                        <a href="/my/orders"
                                                           class="table_of_content_link list-group-item list-group-item-action py-2 border-0 rounded-0"
                                                           style="color: #000000; height: 40px;font: normal normal bold 14px/19px Roboto; padding-left: 4.3%;">
                                                            <i class="fa fa-credit-card mb-2"
                                                               style="font-size: 1.2em; margin-right: 17px !important;"></i>
                                                            Mes commandes
                                                            <i style="color: #000000 !important;"
                                                               class="float-right text-muted fa fa-chevron-right"
                                                               title="Fold" aria-label="Fold"/>
                                                        </a>

                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-lg-9 s_table_of_content_main oe_structure oe_empty o_colored_level"
                                                 data-name="Content" data-editor-message="GLISSEZ UN BLOC ICI">
                                                <div>
                                                    <h3 style="font: normal normal bold 30px/29px Roboto; color: #000000;">
                                                        Bonjour
                                                        <t t-esc="user_id.partner_id.name"/>
                                                        ,
                                                    </h3>
                                                    <div class="text-right">
                                                        <a href="/web/session/logout?redirect=/" role="menuitem"
                                                           class="dropdown-item"
                                                           style="text-decoration: underline;font: normal normal normal 14px/24px Roboto;color: #000000;">
                                                            Se déconnecter
                                                        </a>
                                                    </div>
                                                </div>

                                                <t t-set="order" t-if="user_id.partner_id.sale_order_ids"
                                                   t-value="user_id.partner_id.sale_order_ids[0]"/>
                                                <t t-else="" t-set="order" t-value="False"/>
                                                <t t-if="order">
                                                    <span style="font: normal normal bold 20px/29px Roboto; letter-spacing: 0px;color: #000000;">
                                                        Votre dernière commande :
                                                    </span>
                                                    <p style="font: normal normal bold 16px/19px Roboto;letter-spacing: 0px;color: #000000;opacity: 1;">
                                                        <a t-att-href="order.get_portal_url()"
                                                           style="font: normal normal bold 16px/19px Roboto;letter-spacing: 0px;color: #000000;opacity: 1; margin-top:30px;">
                                                            <t t-esc="order.name"/>
                                                            |
                                                            <span t-field="order.create_date" t-options='{"hide_seconds": True}'/>
                                                        </a>
                                                    </p>
                                                                                        <table class="mb16 table js_cart_lines" id="cart_products">
                                    <thead>
                                        <tr>
                                            <th style="color:#000000;" width="30%">Article</th>

                                            <th style="color:#000000" class="text-center" width="20%">Date de commande</th>
                                            <th style="color:#000000" class="text-center" width="20%" >Prix Total</th>
                                            <th style="color:#000000;" class="th-subtotal" width="30%" colspan="2">Livraison</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="order.order_line" t-as="line">
                                            <td>
                                                <div>
                                                    <a class="tp-link-dark"
                                                       href="#">
                                                        <b>
                                                            <span style="font: normal normal bold 14px/26px Roboto;color: #000000;"
                                                                  t-field="line.name_short">
                                                            </span>
                                                        </b>
                                                    </a>
                                                    <br/>
                                                    <a t-att-href="order.get_portal_url(report_type='pdf', download=True)"
                                                       style="font: normal normal normal 14px/24px Roboto;color: #000000;text-decoration: underline;">
                                                        <i class="fa fa-file-text-o"/>
                                                        Télécharger ma commande
                                                    </a>

                                                </div>
                                            </td>

                                            <td class="text-center td-price" name="price" style="padding-top: 4%;">
                                                <span t-field="order.date_order" t-options='{"hide_seconds": True}' />

                                            </td>
                                            <td class="text-center td-price" name="price" style="padding-top: 4%;">
                                                <span t-field="line.price_total"
                                                      style="white-space: nowrap;font: normal normal normal 14px/24px Poppins !important;letter-spacing: 0px;color: #F70000 !important;"/>

                                            </td>
                                            <td class="td-subtotal" style="padding-top: 1%; "  colspan="2">
                                                <div>

                                                    <t style="font: normal normal normal 14px/24px Poppins;letter-spacing: 0px;color: #000000;margin: 0;"
                                                       t-esc="contact_shipping"
                                                       t-options="dict(widget='contact', fields=['address'], no_marker=True)"/>

                                                    <h3 t-if="order.state == 'done'" style="font: normal normal bold 14px/24px Roboto;color: #00B74F;"
                                                        class="m-0">   <i class="fa fa-fw fa-check" role="img" aria-label="Done" title="Done"/> Complétée
                                                    </h3>
<!--                                                    <span style="font: normal normal bold 12px/20px Poppins;letter-spacing: 0px;color: #000000; ">-->
<!--                                                        <span t-if="order.carrier_id" t-field="order.carrier_id.name"/>-->
<!--                                                    </span>-->
                                                    <t t-if="order.commitment_date">
                                                        Livraison prévue le :  <span style="font: normal normal bold 12px/20px Poppins;letter-spacing: 0px;color: #000000; "
                                                         t-if="order.commitment_date" t-field="order.commitment_date" t-options='{"hide_seconds": True}'/>
                                                    </t>


                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                                </t>
                                            </div>


                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <t t-raw="0"/>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template name="My Portal" t-name="portal.portal_my_home">
        <style>
            main {
            background-color: white;

            }
        </style>
        <t t-call="portal.portal_layout">
            <t t-set="my_details" t-value="True"/>

            <div class="o_portal_my_home" style="display:none;">
                <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                <h3>Documents</h3>

                <div class="o_portal_docs list-group">
                </div>
            </div>
            <div class="oe_structure" id="oe_structure_portal_my_home_2" style="display:none;"/>


        </t>
    </template>


</odoo>

