<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='warning_info']" position='before'>
                <div class="col-12 col-lg-6 o_setting_box" title="Take all the attachments for generate one pdf on selected picking(s)">
                    <div class="o_setting_left_pane">
                        <field name="all_attachments_on_pdf"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="all_attachments_on_pdf"/>
                        <div class="text-muted">
                            Take all the attachments for generate one pdf on selected picking(s)
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
