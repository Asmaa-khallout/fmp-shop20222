<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_deliveryslip_with_customer_code_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t t-set="partner"
                   t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                    </t>
                </t>
                <div class="page">
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done" t-options='{"widget": "date"}'/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                            </t>
                        </div>
                        <div t-if="o.group_id.sale_id" class="col-auto" name="customer_reference">
                            <strong>Customer References:</strong>
                            <p t-field="o.group_id.sale_id.client_order_ref"/>
                        </div>
                        <div t-if="o.picking_type_id.code == 'outgoing' and o.carrier_id" class="col-auto">
                            <strong>Carrier:</strong>
                            <p t-field="o.carrier_id"/>
                        </div>
                        <div t-if="o.shipping_weight" class="col-auto">
                            <strong>Weight:</strong>
                            <br/>
                            <span t-field="o.shipping_weight"/>
                            <span t-field="o.weight_uom_name"/>
                        </div>
                        <div t-if="o.carrier_tracking_ref" class="col-auto">
                            <strong>Tracking Number:</strong>
                            <p t-field="o.carrier_tracking_ref"/>
                        </div>
                    </div>
                    <table class="table table-sm" name="stock_move_table">
                        <thead>
                            <tr>
                                <th style="text-align: center;">
                                    <strong>Customer Code</strong>
                                </th>
                                <th style="text-align: center;">
                                    <strong>Internal Code</strong>
                                </th>
                                <th style="text-align: center;">
                                    <strong>Customer Product Code</strong>
                                </th>
                                <th style="text-align: center;">
                                    <strong>Internal Product Name</strong>
                                </th>
                                <th style="text-align: center;">
                                    <strong>QTY</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines"
                               t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td style="text-align: center;">
                                    <span t-esc="move._get_customer_product_code()"/>
                                </td>
                                <td style="text-align: center;">
                                    <span t-field="move.product_id.default_code"/>
                                </td>
                                <td style="text-align: center;">
                                    <span t-esc="move._get_customer_product_name()"/>
                                </td>
                                <td>
                                    <span t-field="move.product_id.name"/>
                                </td>
                                <td style="text-align: center;">
                                    <span t-field="move.quantity_done"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                </div>
            </t>
        </t>
    </template>

    <template id="report_deliveryslip_with_customer_code">
        <t t-foreach="docs" t-as="o">
            <t t-call="sr_send_email_on_validate_picking.report_deliveryslip_with_customer_code_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>
</odoo>
