<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auth_signup_fields_extend" inherit_id="auth_signup.fields" name="Extended record fields">
            <xpath expr="//input[@id='name']" position="attributes">
                <attribute name="placeholder">e.g. François Martin</attribute>

            </xpath>
            <xpath expr="//div[hasclass('form-group')]" position="attributes">
                <attribute name="class" add="col-md-6" separator=" "/>
            </xpath>
            <xpath expr="//div[hasclass('field-name')]" position="attributes">
                <attribute name="class" add="col-md-6" separator=" "/>
            </xpath>
            <xpath expr="//div[hasclass('field-password')]" position="attributes">
                <attribute name="class" add="col-md-6" separator=" "/>
                <attribute name="class" remove="pt-2" separator=" "/>
            </xpath>
            <xpath expr="//div[hasclass('field-confirm_password')]" position="attributes">
                <attribute name="class" add="col-md-6" separator=" "/>
            </xpath>
            <xpath expr="//div[hasclass('field-confirm_password')]" position="after">
                <div class="form-group col-md-6 field-phone" t-if="only_passwords!=1">
                    <label for="phone">Téléphonne</label>
                    <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control  form-control-sm"
                           required="required" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-mobile" t-if="only_passwords!=1">
                    <label for="mobile">Mobile</label>
                    <input type="text" name="mobile" t-att-value="mobile" id="mobile"
                           class="form-control form-control-sm" required="required"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>

                <div class="form-group col-md-6 field-siret" t-if="only_passwords!=1">
                    <label for="numero_siret" class="control-label">N° SIRET</label>
                    <input type="text" name="numero_siret" t-att-value="numero_siret" id="numero_siret"
                           class="form-control form-control-sm" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>

                <div class="form-group col-md-6 field-tva" t-if="only_passwords!=1">
                    <label for="numero_vat" class="control-label">Numéro de TVA</label>
                    <input type="text" name="vat" t-att-value="vat" id="vat" class="form-control form-control-sm"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-shop" t-if="only_passwords!=1">
                    <label for="name_shop" class="control-label">Name of Magazin</label>
                    <input type="text" name="name_shop" t-att-value="name_shop" id="name_shop"
                           class="form-control form-control-sm" required="required"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 "/>

                <div class="form-group col-md-6 field-street">
                    <label for="street" class="control-label">Street</label>
                    <input type="text" name="street" t-att-value="street" id="street"
                           class="form-control form-control-sm" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-street2">
                    <label for="street2" class="control-label">Street 2</label>
                    <input type="text" name="street2" t-att-value="street2" id="street2"
                           class="form-control form-control-sm" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-zip">
                    <label for="zip" class="control-label">Zip code</label>
                    <input type="text" name="zip" t-att-value="zip_2" id="zip" class="form-control form-control-sm"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-city">
                    <label for="city" class="control-label">City</label>
                    <input type="text" name="city" t-att-value="city" id="city" class="form-control form-control-sm"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group col-md-6 field-country">
                    <label for="country" class="control-label">Country</label>
                    <select id="country_id" name="country_id" class="form-control form-control-sm"
                            t-att-readonly="'readonly' if only_passwords else None"
                            t-att-autofocus="'autofocus' if login and not only_passwords else None">
                        <option value="">Country...</option>
                        <t t-foreach="countries" t-as="c">
                            <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1) ">
                                <t t-esc="c.name"/>
                            </option>
                        </t>
                    </select>
                </div>

                <div class="form-group col-md-6 field-file" t-if="only_passwords!=1">
                    <label for="attachement_activation_ids" class="control-label">Document(s)</label>
                    <input type="file" name="attachement_activation_ids" multiple="1" data-fill-with="undefined"
                           id="attachement_activation_ids"
                           class="form-control-file s_website_form_input  form-control-sm"
                           t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>

                </div>
            </xpath>


        </template>
        <template id="auth_signup_extend" inherit_id="auth_signup.signup" name="Extended Sign up login">
            <xpath expr="//form" position="attributes">
                <attribute name="enctype">multipart/form-data</attribute>
                <attribute name="class" remove="oe_signup_form" separator=" "/>
            </xpath>
            <xpath expr="//t[@t-call='auth_signup.fields']" position="replace">
                <div class="form-row">
                    <t t-call="auth_signup.fields">
                        <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                    </t>
                </div>
            </xpath>
        </template>
        <template id="login_layout_extend" inherit_id="website.login_layout" name="Extended Layout login">
            <xpath expr="//div[hasclass('oe_website_login_container')]" position="attributes">
                <attribute name="class" add="container pb48 w-xl-50 w-lg-75" separator=" "/>
            </xpath>
        </template>

    </data>
</odoo>
