<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_header_custom" inherit_id="website.layout" name="Template header custom" active="False">
        <xpath expr="//header//nav" position="replace">
            <div class="tp-header-box o_colored_level o_cc">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-auto py-3">
                            <!-- Brand -->
                            <t t-call="website.placeholder_header_brand">
                                <t t-set="_link_class" t-value="'d-none d-lg-block'"/>
                            </t>
                        </div>
                        <div class="col-auto py-3 flex-grow-1">
                            <t t-call="website.website_search_box_input">
                                <t t-set="_form_classes"
                                   t-valuef="mx-auto w-100 o_wsale_products_searchbar_form o_not_editable"/>
                                <t t-set="_classes" t-valuef=" "/>
                                <t t-set="search_type" t-valuef="products"/>
                                <t t-set="action" t-value="'/shop'"/>
                            </t>
                        </div>
                        <div class="col-auto py-3 o_not_editable">
                            <div class="row align-items-center justify-content-end tp-account-info">
                                <div class="col-auto my-1">
                                    <div class="media align-items-center">
                                        <h6 class="mb-0 text-primary">
                                            <a href="tel:+33660363542">Appellez nos sp√©cialistes au
                                                <br/>
                                                <span class="text-black font-weight-bold">+33 6 60 36 35 42</span>
                                            </a>
                                        </h6>
                                    </div>
                                </div>
                                <div class="col-auto my-1">
                                    <div class="media align-items-center">
                                        <t t-set="website_sale_order" t-value="website.sale_get_order()"/>
                                        <div class="o_wsale_my_cart position-relative tp-cart-sidebar-action">
                                            <a href="/shop/cart">
                                                <i class="dri dri-cart tp-light-bg rounded-circle text-primary"/>
                                                <sup class="my_cart_quantity badge badge-primary mb-0 font-weight-bold"
                                                     t-out="website_sale_order and website_sale_order.cart_quantity or '0'"
                                                     t-att-data-order-id="website_sale_order and website_sale_order.id or ''"/>
                                            </a>
                                        </div>
                                        <div class="media-body ml-3 d-none d-xl-block">
                                            <div class="mb-1">Mon panier<!--My Cart--></div>
                                            <a class="tp-cart-sidebar-action" href="#">
                                                <h6 class="mb-0">Voir le panier<!--View Cart--></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- <div class="col-auto my-1">
                                  <div class="media align-items-center">
                                    <t t-set="wishcount" t-value="len(request.env['product.wishlist'].current())"/>
                                    <div class="o_wsale_my_wish position-relative">
                                      <a href="/shop/wishlist">
                                        <i class="dri dri-wishlist tp-light-bg rounded-circle text-primary"/>
                                        <sup t-out="wishcount" t-attf-class="my_wish_quantity o_animate_blink badge badge-primary"/>
                                      </a>
                                    </div>
                                    <div class="media-body ml-3 d-none d-xl-block">
                                      <div class="mb-1">Ma liste de souhaits</div>
                                      <a href="/shop/wishlist">
                                        <h6 class="mb-0">Voir la liste de souhaits</h6>
                                      </a>
                                    </div>
                                  </div>
                                </div> -->
                                <div class="col-auto my-1" t-if="request.website.viewref('portal.user_sign_in').active">
                                    <div class="media align-items-center">
                                        <i class="dri dri-user tp-light-bg rounded-circle"/>
                                        <div class="media-body ml-3">
                                            <div style="max-width: 150px;" class="text-truncate mb-1">
                                                <t t-out="not user_id._is_public() and user_id.name or 'Guest'"/>
                                            </div>
                                            <div class="dropdown" t-ignore="true" t-if="not user_id._is_public()">
                                                <a href="#" class="dropdown-toggle d-block" data-toggle="dropdown"
                                                   aria-label="Account Info">
                                                    <h6 class="d-inline mb-0">My Account</h6>
                                                </a>
                                                <div class="dropdown-menu" role="menu">
                                                    <a href="/my" role="menuitem" class="dropdown-item">Account</a>
                                                    <a href="/my/orders" role="menuitem" class="dropdown-item">Orders
                                                    </a>
<!--                                                    <a href="/shop/wishlist" role="menuitem" class="dropdown-item">-->
<!--                                                        Wishlist (-->
<!--                                                        <span class="tp-wishlist-counter">-->
<!--                                                            <t t-out="wishcount"/>-->
<!--                                                        </span>-->
<!--                                                        )-->
<!--                                                    </a>-->
                                                    <div class="dropdown-divider"></div>
                                                    <a href="/web/session/logout?redirect=/" role="menuitem"
                                                       class="dropdown-item">Logout
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="dropdown" t-else="">
                                                <a href="#" class="dropdown-toggle d-block" data-toggle="dropdown"
                                                   aria-label="Account Info">
                                                    <h6 class="d-inline mb-0 tp-link-dark">My Account</h6>
                                                </a>
                                                <div class="dropdown-menu" role="menu">
                                                    <a href="/web/login" role="menuitem" class="dropdown-item">Login</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a href="/shop/cart" role="menuitem" class="dropdown-item">My Cart
                                                    </a>
<!--                                                    <a href="/shop/wishlist" role="menuitem" class="dropdown-item">-->
<!--                                                        Wishlist (-->
<!--                                                        <span class="tp-wishlist-counter">-->
<!--                                                            <t t-out="wishcount"/>-->
<!--                                                        </span>-->
<!--                                                        )-->
<!--                                                    </a>-->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <style>
                @media (min-width: 992px){
                header .navbar .dropdown-menu {
                max-height: 100vh !important;
                overflow-y: hidden !important;
                }
                }
            </style>
            <t t-call="website.navbar">
                <t t-set="_navbar_classes" t-valuef="shadow-sm"/>
                <div id="top_menu_container" class="container justify-content-between">
                    <!-- Navbar Toggler -->
                    <t t-call="theme_prime.component_navbar_toggler"/>
                    <!-- Brand -->
                    <a href="/" t-attf-class="navbar-brand logo d-lg-none o_offcanvas_logo_container">
                        <img t-attf-src="/website/image/website/#{request.website.id}/logo" role="img"
                             t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
                    </a>
                    <!-- Account Info -->
                    <t t-call="theme_prime.component_navbar_mobile_account_info"/>
                    <!-- Navbar Collapse -->
                    <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                        <t t-call="website.navbar_nav">
                            <t t-set="_nav_class" t-value="'flex-grow-1'"/>
                            <!-- Menu -->
                            <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                <t t-call="website.submenu">
                                    <t t-set="item_class" t-value="'nav-item'"/>
                                    <t t-set="link_class" t-value="'nav-link'"/>
                                </t>
                            </t>
                        </t>
                    </div>
                    <div id="scroll_cart" class="o_wsale_my_cart position-relative tp-cart-sidebar-action d-none">
                        <a href="/shop/cart">
                            <i class="dri dri-cart tp-light-bg rounded-circle text-primary"/>
                            <sup class="my_cart_quantity badge badge-primary mb-0 font-weight-bold rounded-circle"
                                 t-out="website_sale_order and website_sale_order.cart_quantity or '0'"
                                 t-att-data-order-id="website_sale_order and website_sale_order.id or ''"
                                 style="position: absolute;right: 0;"/>
                        </a>
                    </div>
                </div>
                <style>
                    .input-group-append > .btn.oe_search_button.btn-primary{
                    border-bottom-right-radius: 23px;
                    border-top-right-radius: 23px;
                    background: white;
                    border-color: #707070;
                    border: 1px;
                    }
                    #wrapwrap > header .search-query {
                    border-bottom-left-radius: 19px;
                    border-top-left-radius: 19px;
                    background: white;
                    border-color: #707070;
                    border: 1px;
                    height: 52px !important;
                    }
                    .tp-header-box{
                    background: #D1D4D8 !important;
                    }
                    .navbar-expand-lg{
                    background: #EFEFEF !important;
                    }
                    .s_mega_menu_prime_1.p-3.p-lg-4.o_colored_level{
                    background: #EFEFEF !important;
                    }

                    .navbar-brand .img-fluid {
                    max-width: unset !important;

                    }
                    #wrapwrap > header .tp-header-box .tp-account-info .my_cart_quantity {
                    left: 25px !important;
                    }
                    .showhamza #mega {
                    display: block;
                    }
                </style>
            </t>
        </xpath>
    </template>

    <template inherit_id="website.submenu" id="custom_website">
     <xpath expr="//div[@t-if='submenu.is_mega_menu']" position="attributes">
         <attribute name="id">mega</attribute>
     </xpath>
    </template>

</odoo>