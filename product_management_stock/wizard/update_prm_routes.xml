<?xml version="1.0"?>
<odoo>

    <record id="update_prm_routes_wizard_form_view"  model="ir.ui.view">
        <field name="name">update.prm.routes.form.view</field>
        <field name="model">update.prm.routes</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="products" invisible="1"/>
                    <field name="routes_to_add_ids" widget="many2many_tags"/>
                    <field name="routes_to_exclude_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>

    <record id="update_prm_routes_action" model="ir.actions.act_window">
        <field name="name">Update routes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.prm.routes</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_management_stock.update_prm_routes_wizard_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>
