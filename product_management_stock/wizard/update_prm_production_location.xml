<?xml version="1.0"?>
<odoo>

    <record id="update_prm_productionlocation_wizard_form_view"  model="ir.ui.view">
        <field name="name">update.prm.productionlocation.form.view</field>
        <field name="model">update.prm.productionlocation</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="products" invisible="1"/>
                    <field name="productionlocation_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="update_prm_productionlocation_action" model="ir.actions.act_window">
        <field name="name">Update production location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.prm.productionlocation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_management_stock.update_prm_productionlocation_wizard_form_view"/>
        <field name="target">new</field>
    </record>


</odoo>
