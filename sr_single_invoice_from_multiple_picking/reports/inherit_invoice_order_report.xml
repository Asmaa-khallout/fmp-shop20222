<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="external_layout_france_mobile_parts_custom">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="row">
                <div class="col-6">
                    <div class="mt32 ml8">
                        <img t-if="company.logo"
                             t-att-src="image_data_uri(company.logo)" style="max-height: 100px;"
                             alt="Logo"/>
                    </div>
                </div>
                <div class="col-6 text-right">
                    <span style="font-size: 30px;font-weight: 700;">FACTURE</span>
                    <br/>
                    <span style="font-size: 30px; font-weight: 700;" t-field="o.name"/>
                </div>
            </div>
            <div t-if="company.logo or company.report_header"
                 class="row zero_min_height" style="padding-top: 15px;">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
        </div>
        <div
                t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="report_invoice_document_custom">
        <t t-call="sr_single_invoice_from_multiple_picking.external_layout_france_mobile_parts_custom">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <div class="row mb8">
                    <div class="col-6">
                        <strong>
                            <span>Adresse de livraison</span>
                        </strong>
                        <span t-field="o.partner_shipping_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>
                    <div class="col-6">
                        <strong>
                            <span>Adresse de facturation</span>
                        </strong>
                        <span t-field="o.partner_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>
                </div>
                <table style="margin-top:50px; border-top: 1px solid black;"
                       width="100%">
                    <thead class="thead-light" style="background-color: #f2f2f2;">
                        <tr>
                            <th scope="col" style="text-align: center; padding: 5px">N° de facture</th>
                            <th scope="col" style="text-align: center; padding: 5px">Date de facture</th>
                            <th scope="col" style="text-align: center; padding: 5px">Références</th>
                            <th scope="col" style="text-align: center; padding: 5px">Origin</th>
                            <th scope="col" style="text-align: center; padding: 5px">Date d'échéance</th>
                            <th scope="col" style="text-align: center; padding: 5px">Conditions de paiement</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.name"/>
                            </td>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.invoice_date"/>
                            </td>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.ref"/>
                            </td>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.invoice_origin"/>
                            </td>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.invoice_date_due"/>
                            </td>
                            <td style="text-align: center; padding: 5px">
                                <span t-field="o.invoice_payment_term_id"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <table style="margin-top:50px; border-top: 1px solid black;"
                       width="100%">
                    <thead style="background-color: #f2f2f2;">
                        <tr>
                            <th scope="col" style="text-align: center; padding: 5px">Référence</th>
                            <th scope="col" style="text-align: center; padding: 5px">Article</th>
                            <th scope="col" style="text-align: center; padding: 5px">Taxe</th>
                            <th scope="col" style="text-align: center; padding: 5px">PU HT</th>
                            <th scope="col" style="text-align: center; padding: 5px">Quantité</th>
                            <th scope="col" style="text-align: center; padding: 5px">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-foreach="lines" t-as="line">
                            <tr>
                                <td style="text-align: center; padding: 5px">
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td style="padding: 5px">
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td style="text-align: center; padding: 5px">
                                    <span t-esc="', '.join(map(lambda x: (str(x.amount)+'%'), line.tax_ids))"/>
                                </td>
                                <td class="o_price_total" style="text-align: center; padding: 5px">
                                    <span t-field="line.price_unit"
                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                                <td style="text-align: center; padding: 5px">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td class="o_price_total" style="text-align: center; padding: 5px">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <table style="display: inline-block; margin-top:50px; border-top: 1px solid black; float: left; width:50%; ">
                        <thead style="background-color: #f2f2f2;">
                            <tr class="border-black o_subtotal">
                                <th style="width:15%; text-align: center; padding: 5px;">Taxes</th>
                                <th style="width:15%; text-align: center; padding: 5px;">Taux de taxe</th>
                                <th style="width:15%; text-align: center; padding: 5px;">Total taxes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="line">
                                <t t-if="line.tax_line_id">
                                    <tr>
                                        <td style="text-align: center; padding: 5px;">
                                            <span t-field="line.tax_line_id.name"/>
                                        </td>
                                        <td style="text-align: center; padding: 5px;">
                                            <span t-field="line.tax_line_id.amount"/>
                                        </td>
                                        <td style="text-align: center; padding: 5px;">
                                            <span t-field="line.credit"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <table style=" margin-left:20px; width:30%; float:right; margin-top:50px; border-top: 1px solid black;">
                        <tr class="border-black o_subtotal" style="">
                            <td style="background-color: #f2f2f2; text-align: right; padding: 5px;">
                                Sous-total
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="background-color: #f2f2f2; text-align: right; padding: 5px;">Transport</td>
                            <td class="text-right">
                                <span>0.00
                                    <span t-field="o.currency_id.symbol"/>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="background-color: #f2f2f2; text-align: right; padding: 5px;">
                                <strong>Total (HT)</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                        <!-- <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                            <tr style="">
                                <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                    <td style="background-color: #f2f2f2; text-align: right; padding: 5px;">
                                        <strong>
                                            <span t-esc="amount_by_group[0]"/>
                                        </strong>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-esc="amount_by_group[3]"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td>
                                        <strong>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span style="background-color: #f2f2f2; text-align: right; padding: 5px;">
                                                &amp;bsp;
                                                <span>on</span>
                                                <t t-esc="amount_by_group[4]"/>
                                            </span>
                                        </strong>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-esc="amount_by_group[3]"/>
                                    </td>
                                </t>
                            </tr>
                        </t> -->
                        <tr class="o_total">
                            <td style="background-color: #f2f2f2; text-align: right; padding: 5px;">
                                <strong>Total</strong>
                            </td>
                            <td class="text-right">
                                <strong>
                                    <span t-field="o.amount_total"/>
                                </strong>
                            </td>
                        </tr>
                    </table>
                </div>
                <t t-if="o.check_payment()">
                    <div class="clearfix">
                        <table style="width:50%;  border-top: 1px solid black; float: left; ">
                            <thead style="background-color: #f2f2f2;">
                                <tr class="border-black o_subtotal">
                                    <th style="width:25%; text-align: center; padding: 5px;">Mode de paiment</th>
                                    <th style="width:25%; text-align: center; padding: 5px;">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.check_payment()" t-as="line">
                                    <tr>
                                        <td style="text-align: center; padding: 5px;">
                                            <span t-field="line.payment_method_line_id"/>
                                        </td>
                                        <td style="text-align: center; padding: 5px;">
                                            <span t-field="line.amount"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </div>
            <div class="footer">
                <div style="border-top: 1px solid black;">
                    <center>
                        <span style="font-size: 12px;">FMP France-France</span>
                    </center>
                    <center>
                        <span style="font-size: 12px;" t-field="o.company_id"/>-
                        <span style="font-size: 12px;" t-field="o.company_id.street"/>
                        <span style="font-size: 12px;" t-field="o.company_id.zip"/>
                        <span style="font-size: 12px;" t-field="o.company_id.city"/>
                        <span style="font-size: 12px;">-</span>
                        <span style="font-size: 12px;">Siret:</span>
                        <span style="font-size: 12px;" t-field="o.company_id.siret"/>
                        <span style="font-size: 12px;">RCS de Toulouse</span>
                        <span style="font-size: 12px;">-</span>
                        <span style="font-size: 12px;">TVA:</span>
                        <span style="font-size: 12px;" t-field="o.company_id.vat"/>
                    </center>
                    <center>
                        <span style="font-size: 12px;">IBAN:</span>
                        <span style="font-size: 12px;">FR76 1460 7003 5970 4211 0611 608</span>
                        <span style="font-size: 12px;">BIC:</span>
                        <span style="font-size: 12px;">CCBPFRPPMAR</span>
                    </center>
                    <center>
                        <span>Page:</span>
                        <span class="page"/>/
                        <span class="topage"/>
                    </center>
                </div>
            </div>
        </t>
    </template>


    <template id="account.report_invoice_with_payments">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang"
                   t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                <t t-call="sr_single_invoice_from_multiple_picking.report_invoice_document_custom" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>