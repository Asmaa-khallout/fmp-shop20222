<?xml version="1.0"?>
<odoo>

    <!-- Inherited the res partner view and added category  parent -->
    <record id="res_partner_category_parent" model="ir.ui.view">
        <field name="name">res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="parent_category_id" string="Category parent" widget="many2many_tags" attrs="{'invisible': [('parent_id', '=', False)]}" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags Parent..."/>
            </xpath>
        </field>
    </record>
</odoo>