<?xml version="1.0"?>
<odoo>

    <!-- Inherited the res team view from and added members contact -->
    <record id="res_partner_category_parent" model="ir.ui.view">
        <field name="name">crm.team.inherit</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form" />
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='members_users']" position="after">
                <page string="Members Contact" name="members_contact">
               <field name="members_contact" mode="kanban" class="w-100">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="image_1920"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content d-flex">
                                                    <div>
                                                        <img t-att-src="kanban_image('res.partner', 'image_1920', record.id.raw_value)" class="o_kanban_image o_image_64_cover" alt="Image"/>
                                                    </div>
                                                    <div class="oe_kanban_details d-flex flex-column ml-3">
                                                        <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                                        <div class="d-flex align-items-baseline text-break">
                                                            <i class="fa fa-envelope mr-1" role="img" aria-label="Email" title="Email"/><field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                </page>

                 <page string="Responsibles" name="Responsables">

                      <field name="Responsables" mode="kanban" class="w-100" domain="[('id', 'in', parent.Responsables)]"/>



