<?xml version="1.0"?>
<odoo>
<template id="custom_confirmation" inherit_id="website_sale.confirmation">
    <xpath expr="//h1" position="attributes">
        <attribute name="class" remove="text-primary mt-4" separator=" "/>
    </xpath>
strong t-field="order.amount_total"
    <xpath expr="//strong[@t-field='order.amount_total']" position="attributes">
        <attribute name="class" add="price-txt" sperator=" "/>
    </xpath>
<xpath expr="//div[@id='wrap']" position="after">
               <style>
                .bg-info {
            background-color: #F7F7F7 !important;
            color: #343a40 !important;
            }
            .price-txt{
            color: #f70505 !important;
            }
            .monetary_field {
            font-weight: bold !important;
            font-size: 16px;
            letter-spacing: 0px;
            color: #F70000 !important;
            }
            div.card{
            border-radius: 1.4rem !important;
            }
            </style>
</xpath>
</template>
</odoo>