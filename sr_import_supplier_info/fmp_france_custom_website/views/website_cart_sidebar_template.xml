<?xml version="1.0"?>
<odoo>
<template id="theme_prime.cart_sidebar">
     <div class="container-fluid px-0 tp-cart-sidebar d-flex flex-column">
            <div class="row no-gutters justify-content-between align-items-center border-bottom p-3">
                <div class="col-auto d-flex align-item-center">
                    <i class="dri dri-cart text-primary fa-2x mr-2" style="font-size: 23px;"> </i>
                    <h5 class="mb-0 mr-1 cart-title"> Votre panier <!--Your Cart--> </h5>
                </div>
                <div class="col-auto">
                    <a href="#" class="tp-close tp-remove-icon" title="Close">
                        <i class="dri dri-cross-l"/>
                    </a>
                </div>
            </div>
            <div class="row no-gutters flex-grow-1">
                <div class="col-12 d-flex flex-column">
                    <div t-if="not order or not order.website_order_line" class="text-center">
                        <t t-call="theme_prime.tp_svg_cart">
                            <t t-set="_classes" t-value="'m-5'"/>
                        </t>
                        <h5 class="my-4 title-bold-cart">Votre panier est vide!<!--Your cart is empty!--></h5>
                        <a class="btn btn-primary bnt-primary-title" href="/shop">
                            Acheter Maintenant <!--Shop Now-->
                        </a>
                    </div>
                    <t t-if="order and order.website_order_line">
                        <div class="tp-cart-products flex-grow-1 p-3 bg-300">
                            <t t-foreach="order.website_order_line" t-as="line">
                                <div class="media p-3 mb-3 shadow-sm bg-white position-relative" style="border-radius: 5px !important;">
                                    <div class="position-relative mr-2">
                                        <span t-field="line.product_id.image_128" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded o_image_64_max border mr-2'}"/>
                                    </div>
                                    <div class="media-body">
                                        <div class="d-flex justify-content-between">
                                            <h6><a class="tp-link-dark" t-att-href="line.product_id.website_url"><t t-out="line.name_short"/></a></h6>
                                            <a href="#" class="tp-remove-line tp-remove-icon ml-2 shadow-sm text-500" t-att-data-product-id="line.product_id.id" t-att-data-line-id="line.id" title="Remove">
                                                <i class="fa fa-times"/>
                                            </a>
                                        </div>
                                        <div class="css_quantity input-group tp-small">
                                            <t t-if="not line._is_not_sellable_line()">
                                                <div class="input-group-prepend">
                                                    <a href="#" class="btn btn-link js_add_cart_json" aria-label="Remove one" title="Remove one">
                                                        <i class="fa fa-minus"/>
                                                    </a>
                                                </div>
                                                <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
                                                <div class="input-group-append">
                                                    <a href="#" class="btn btn-link float_left js_add_cart_json" aria-label="Add one" title="Add one">
                                                        <i class="fa fa-plus"/>
                                                    </a>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted w-100" t-out="int(line.product_uom_qty)"/>
                                                <input type="hidden" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-value="line.product_uom_qty"/>
                                            </t>
                                        </div>
                                        <div class="mt-2 d-inline-block float-right">
                                            <h6 t-field="line.price_reduce_taxexcl" class="text-primary price-title" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <h6 t-field="line.price_reduce_taxinc" class="text-primary price-title" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}" groups="account.group_show_line_subtotals_tax_included"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="shadow">
                            <div class="border-top">
                                <div class="row no-gutters justify-content-between px-3 pt-4">
                                    <div class="col-auto">
                                        <h6 class="mb-0 text-body subtotal-title">Sous-total<!--Subtotal--></h6>
                                    </div>
                                    <div class="col-auto">
                                        <h6 t-field="order.amount_untaxed" class="monetary_field text-body mb-0 price-title" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                                <div class="row no-gutters justify-content-between px-3 py-4">
                                    <div class="col-auto">
                                        <h6 class="mb-0 text-body subtotal-title">Taxes</h6>
                                    </div>
                                    <div class="col-auto">
                                        <h6 t-field="order.amount_tax" class="monetary_field text-body mb-0 price-title" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="row no-gutters justify-content-between p-3 pb-4">
                                    <div class="col-auto">
                                        <h5 class="mb-0 total-title">Total</h5>
                                    </div>
                                    <div class="col-auto">
                                        <h5 t-field="order.amount_total" class="monetary_field mb-0 total-title" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row mx-0 pb-3">
                                <div class="col-6">
                                    <a class="btn btn-outline-primary btn-block bnt-outline-title" href="/shop/cart">
                                       Voir le panier<!-- View Cart-->
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-primary btn-block bnt-primary-title" href="/shop/checkout?express=1">
                                       Commander<!-- Checkout-->
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
        <style>
          .subtotal-title{
          font: normal normal 14px/17px Roboto;
          color: #000000 !important;
          }
          .total-title{
          font: normal normal bold 14px/24px Roboto; color: #000000 !important;
          }
          .price-title{
           font: normal normal normal 14px/26px Roboto;
           color: #F70505 !important;
          }
          .monetary_field.total-title{
          font: normal normal bold 14px/24px Roboto; color: #F70505 !important;
          }
          .bnt-primary-title{
          font: normal normal 16px/19px Roboto;
          color: #FFFFFF;
          border-radius: 50rem;
          padding: 0.5rem 1rem;
          font-size: 1rem;
          line-height: 1.5;
          }
          .bnt-outline-title{
          font: normal normal bold 16px/19px Roboto;
          border: 2px solid #274B95;
          border-radius: 50rem;
          padding: 0.5rem 1rem;
          font-size: 1rem;
          line-height: 1.5;
          }
           .css_quantity{
              border:none !important;
              }
          .input-group-prepend .btn {
              border: 1px solid #CED4DA;
              border-top-left-radius: 19px;
              border-bottom-left-radius: 19px;
              }
            .input-group-append .btn {
              border: 1px solid #CED4DA;
              border-top-right-radius: 19px !important;
              border-bottom-right-radius: 19px !important;
              }
              .js_quantity.form-control.quantity{
              border: 1px solid #CED4DA;
              }
              .css_quantity .btn:hover {
                background-color: #E4E4E4 !important;
                color:black !important;
              }
        </style>


</template>
</odoo>