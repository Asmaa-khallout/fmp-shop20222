<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sr_import_product_customer_info_wizard" model="ir.ui.view">
            <field name="name">sr.import.product.customer.info.wizard</field>
            <field name="model">sr.import.product.customer.info</field>
            <field name="arch" type="xml">
                <form string="Import Product Customer Info">
                    <group>
                        <group>
                            <field name="import_file" filename="name"/>
                        </group>

                        <footer>
                            <button name="import_product_customer_info"
                                    string="Import" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </group>
                </form>
            </field>
        </record>

        <record id="sr_action_import_product_customer_info"
                model="ir.actions.act_window">
            <field name="name">Import Product Customer Info</field>
            <field name="res_model">sr.import.product.customer.info</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
