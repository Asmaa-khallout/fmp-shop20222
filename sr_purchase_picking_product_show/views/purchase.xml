<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sr_purchase_order_form_inherit_add_button_to_see_product_detail" model="ir.ui.view">
        <field name="name">sr.purchase.order.form.inherit.add.button.to.see.product.detail</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="object" name="action_view_product"
                        class="oe_stat_button" icon="fa-pencil-square-o">
                    <field name="product_count" widget="statinfo"
                           string="Products"/>
                </button>
            </div>
        </field>
    </record>
</odoo>